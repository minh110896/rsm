<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= favicon_link_tag "framgia.png" %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <div id="page-container">
      <header>
        <div class="container">
          <%= link_to root_path, class: "site-logo" do %>
            <i class="fa fa-gg" aria-hidden="true"></i>
            <strong><%= t "index.fram" %></strong><%= t "index.recruit" %>
          <% end %>
          <nav>
            <a href="javascript:void(0)" class="btn btn-default site-menu-toggle visible-xs visible-sm">
              <i class="fa fa-bars"></i>
            </a>
            <ul class="site-nav">
              <li class="visible-xs visible-sm">
                <a href="javascript:void(0)" class="site-menu-toggle text-center">
                  <i class="fa fa-times"></i>
                </a>
              </li>
              <li>
                <a href="javascript:void(0)" class="site-nav-sub"><i class="fa fa-angle-down site-nav-arrow"></i><%= t "index.home" %></a>
                <ul>
                  <li>
                    <a href="index.html"><%= t "index.home" %></a>
                  </li>
                </ul>
              </li>
              <li class="active">
                <a href="javascript:void(0)" class="site-nav-sub"><i class="fa fa-angle-down site-nav-arrow"></i><%= t "index.home" %></a>
                <ul>
                  <li>
                    <a href="blog.html" class="active"><%= t "index.home" %></a>
                  </li>
                </ul>
              </li>
              <% if user_signed_in? %>
                <li>
                  <%= link_to current_user.name, edit_user_registration_path(current_user) %>
                  <ul>
                    <li>
                      <%= link_to edit_user_registration_path(current_user) do %>
                        <%= t "users.new.profile" %>
                        <i class="fa fa-user fa-fw pull-right"></i>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to destroy_user_session_path, method: :delete do %>
                        <i class="fa fa-ban fa-fw pull-right"></i>
                        <%= t("layouts._header.logout") %>
                      <% end %>
                    </li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to t("users.new.login"), new_user_session_path %></li>
              <% end %>
              </ul>
          </nav>
        </div>
      </header>
      <section class="site-section site-section-light site-section-top themed-background-dark"
        style="height: 84px; padding-top: 0px;">
        <div class="container" ">
        </div>
      </section>
      <div class="row">
        <div class="col-md-3">
          <% flash.each do |message_type, message| %>
          <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
              <i class="fa fa-window-close" aria-hidden="true"></i>
            </button>
            <hr class="message-inner-separator">
            <p><%= message %></p>
          </div>
          <% end %>
        </div>
      </div>
      <section class="site-content">
        <%= yield %>
      </section>
      <footer class="site-footer site-section">
        <%= render "layouts/footer" %>
      </footer>
    </div>
  </body>
</html>
